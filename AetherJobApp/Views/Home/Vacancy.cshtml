
<script src="~/angularjs/factory/vacancymasterfactory.js"></script>
<script src="~/angularjs/controller/vacancycontroller.js"></script>
<div class="container" ng-controller="Vacancy as vm" ng-init="vm.loadVacancy()">
    <div class="row align-items-center mb-3">
        <div class="col">
            <h3 class="mb-0">Vacancy List</h3>
        </div>
        <div class="col-auto text-end">
            <button class="btn btn-primary mb-3"
                    ng-click="vm.openAddModal()">
                <i class="fa fa-plus"></i> Add Vacancy
            </button>
        </div>
    </div>
	<div class="row col-md-12">
		<table id="tblVacancy" class="table table-striped table-hover table-bordered align-middle shadow-sm rounded-3">
			<thead class="table-dark">
				<tr>
					<th>Vacancy Type</th>
					<th>Status</th>
					<th>Posted On</th>
					<th>Expired On</th>
					<th>IsActive</th>
				</tr>
			</thead>
			<tbody>
				<tr ng-repeat="e in vm.objVacancyList">
					<td>{{e.vacancyType}}</td>
					<td>
						<span class="badge"
							  ng-class="{'bg-primary': e.status, 'bg-danger': !e.status}"
							  style="cursor:pointer">
							{{ e.status ? 'open' : 'closed' }}
						</span>
					</td>
					<td>{{e.postedOn | date:'yyyy-MM-dd' }}</td>
					<td>{{e.expiredOn | date:'yyyy-MM-dd' }}</td>
					<td>
						<span class="badge"
							  ng-class="{'bg-success': e.isActive, 'bg-danger': !e.isActive}"
							  style="cursor:pointer"
							  ng-click="vm.changeStatus(e.id,e.isActive)">
							{{ e.isActive ? 'Active' : 'Inactive' }}
						</span>
					</td>

				</tr>
				<tr ng-if="vm.objVacancyList.length === 0">
					<td colspan="6" style="text-align:center; color:red;">
						No Records Found
					</td>
				</tr>
			</tbody>
		</table>
	</div>
    <div class="modal fade" id="vacancyModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content rounded-3 shadow">

                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title">{{vm.isEdit ? 'Edit Vacancy' : 'Add Vacancy'}}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <form>

                        <div class="mb-3">
                            <label>Vacancy Type</label>
                            <input type="text" class="form-control" ng-model="vm.objVacancy.vacancyType">
                        </div>

                        <div class="mb-3">
                            <label>Status</label>
                            <select class="form-select" ng-model="vm.objVacancy.status">
                                <option value="open">Open</option>
                                <option value="closed">Closed</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label>Posted On</label>
                            <input type="date" class="form-control" ng-model="vm.objVacancy.postedOn">
                        </div>

                        <div class="mb-3">
                            <label>Expired On</label>
                            <input type="date" class="form-control" ng-model="vm.objVacancy.expiredOn">
                        </div>

                        <div class="mb-3">
                            <label>Active</label>
                            <input type="checkbox" ng-model="vm.objVacancy.isActive">
                        </div>

                    </form>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary" ng-click="vm.saveVacancy()">Save</button>
                </div>

            </div>
        </div>
    </div>

</div>