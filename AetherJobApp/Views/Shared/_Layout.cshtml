<!DOCTYPE html>
<html lang="en" ng-app="AetherJobApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Job Portal</title>

    <!-- Bootstrap & Site CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AetherJobApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- jQuery -->
    <script src="~/lib/jquery-3.7.1.min.js"></script>

    <!-- DataTables -->
    <link href="~/lib/datatables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables.min.js"></script>

    <!-- Toastr -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- AngularJS -->
    <script src="~/lib/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.8.3/angular-animate.min.js"></script>

    <!-- AngularJS App -->
    <script src="~/angularjs/app/app.js"></script>
    <script src="~/angularjs/controller/layoutController.js"></script>

    <!-- Modern UI Styles -->
    <style>
        body {
            background: #f5f7fa;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            background: white;
            border-bottom: 1px solid #e5e5e5;
            padding: 0.8rem 1rem;
        }

        .navbar-brand {
            font-size: 1.6rem;
            font-weight: 700;
            color: #0d6efd !important;
        }

        .hero-section {
            background: linear-gradient(90deg, #0d6efd 0%, #6610f2 100%);
            padding: 60px 0;
            color: white;
            border-radius: 0 0 25px 25px;
            box-shadow: 0px 5px 20px rgba(0,0,0,0.15);
            margin-bottom: 25px;
        }

        .hero-title {
            font-size: 2.4rem;
            font-weight: 800;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        /* Active menu highlight */
        .navbar-nav .nav-item.active .nav-link {
            font-weight: bold;
            color: #0d6efd !important;
            background-color: rgba(13, 110, 253, 0.1);
            border-radius: 0.25rem;
        }

        /* Loading overlay */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.3);
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-auth {
            padding: 8px 22px;
            font-weight: 600;
            border-radius: 30px;
            letter-spacing: .5px;
            transition: 0.3s;
        }

        .btn-login {
            background: linear-gradient(45deg, #0d6efd, #1e90ff);
            color: white;
        }

            .btn-login:hover {
                opacity: .85;
                color: white;
            }

        .btn-signup {
            background: white;
            border: 2px solid #0d6efd;
            color: #0d6efd;
        }
            .btn-signup:hover {
                background: #0d6efd;
                color: white;
            }

        .btn-logout-icon {
            background: linear-gradient(45deg, #dc3545, #ff4d6d);
            color: white;
            border-radius: 50%;
            width: 42px;
            height: 42px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 18px;
            transition: .3s;
        }

            .btn-logout-icon:hover {
                opacity: .85;
            }

        .hero-wallpaper {
            background: url('/images/job-wallpaper.jpg') center/cover no-repeat;
            height: 380px;
            border-radius: 0 0 25px 25px;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-shadow: 0px 3px 10px rgba(0,0,0,0.6);
            overflow: hidden;
        }

            .hero-wallpaper::after {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0,0,0,0.45);
                z-index: 1;
            }

        .hero-content {
            text-align: center;
            z-index: 2;
        }

            .hero-content h1 {
                font-size: 3rem;
                font-weight: 800;
            }

            .hero-content p {
                font-size: 1.2rem;
            }
    </style>

</head>

<body>

    <!-- LOADING SPINNER -->
    <div ng-show="vm.isLoading" class="loading-overlay">
        <i class="fa-solid fa-spinner fa-spin" style="font-size:50px; color:white;"></i>
    </div>

    <!-- NAVIGATION -->
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-briefcase"></i> Job Portal
                </a>

                <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse"
                     id="navbarContent"
                     ng-controller="Layout as vm"
                     ng-init="vm.init()">

                    <ul class="navbar-nav me-auto">

                        <li class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "UserList" ? "active" : "")"
                            ng-if="vm.role==='Admin'">
                            <a class="nav-link" asp-controller="Home" asp-action="UserList">Users</a>
                        </li>

                        <li class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Vacancy" ? "active" : "")"
                            ng-if="vm.role==='Admin'">
                            <a class="nav-link" asp-controller="Home" asp-action="Vacancy">Vacancies</a>
                        </li>

                        <li class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Requirement" ? "active" : "")"
                            ng-if="vm.role==='Admin'">
                            <a class="nav-link" asp-controller="Home" asp-action="Requirement">Job Requirement</a>
                        </li>

                        <li class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Career" ? "active" : "")">
                            <a class="nav-link" asp-controller="Home" asp-action="Career">Career</a>
                        </li>

                        <li class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Candidates" ? "active" : "")"
                            ng-if="vm.role==='Admin'">
                            <a class="nav-link" asp-controller="Home" asp-action="Candidates">Candidates</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">

                        <!-- When logged in -->
                        <li class="nav-item d-flex align-items-center" ng-if="vm.username">
                            <span class="me-2">Welcome,</span>
                            <b class="text-primary me-3">{{vm.username}}</b>

                            @* <button class="btn btn-danger btn-sm rounded-pill shadow-sm"
                                    ng-click="vm.logout()">
                                <i class="fa fa-sign-out-alt"></i>
                            </button> *@

                            <button class="btn-logout-icon" ng-click="vm.logout()">
                                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                            </button>

                        </li>

                      @*   <li class="nav-item" ng-if="!vm.username">
                            <a class="btn btn-primary btn-sm rounded-pill" href="/Home/Login">
                                <i class="fa fa-sign-in-alt"></i> Login
                            </a>
                        </li> *@
                        <li>
                            <a href="/Home/Login" class="btn-auth btn-login me-2" ng-if="!vm.username">
                                <i class="fa-solid fa-right-to-bracket"></i> Login
                            </a>

                            <a href="/Home/Register" class="btn-auth btn-signup" ng-if="!vm.username">
                                <i class="fa-solid fa-user-plus"></i> Sign Up
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- BEAUTIFUL HERO SECTION (Auto-hidden on Login page) -->
    @if (ViewContext.RouteData.Values["action"]?.ToString() != "Login")
    {
        @* <section class="hero-section text-center">
            <div class="container">
                <h1 class="hero-title">Find the Right Job for Your Future</h1>
                <p class="hero-subtitle">Discover opportunities that match your skills and ambitions.</p>
            </div>
        </section> *@
        <section class="hero-wallpaper">
            <div class="hero-content">
                <h1>Find Your Dream Job</h1>
                <p>Connecting talents with the best opportunities</p>
            </div>
        </section>
    }

    <!-- MAIN CONTENT -->
    <div class="container">
        <main class="pb-4">
            @RenderBody()
        </main>
    </div>

    <!-- JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
