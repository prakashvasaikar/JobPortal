@{
    Layout = null;
}

<!-- CSS -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />

<!-- AngularJS -->
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.3/angular.min.js"></script>
<script src="~/angularjs/app/app.js"></script>
<script src="~/angularjs/factory/loginfactory.js"></script>
<script src="~/angularjs/controller/logincontroller.js"></script>

<style>
    body {
        background: #f5f6fa;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-card {
        max-width: 450px;
        margin: 60px auto;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        padding: 30px;
    }

        .login-card h2 {
            font-weight: 700;
            margin-bottom: 5px;
        }

        .login-card p {
            color: #6c757d;
            font-size: 0.95rem;
            margin-bottom: 25px;
        }

    .btn-primary {
        background: #2d5bff;
        border: none;
        font-weight: 600;
    }

        .btn-primary:hover {
            background: #1f46e2;
        }
</style>

<div class="login-card"
     ng-app="AetherJobApp"
     ng-controller="login as vm"
     ng-init="vm.init()">

    <h2 class="text-center">Login</h2>
    <p class="text-center">Welcome back to Company Job Portal</p>

    <!-- Username -->
    <div class="form-group row mb-3">
        <label class="col-sm-4 col-form-label fw-semibold">Username</label>
        <div class="col-sm-8">
            <input type="text"
                   ng-model="vm.objLogin.username"
                   class="form-control form-control-lg"
                   placeholder="Enter username">
        </div>
    </div>

    <!-- Password -->
    <div class="form-group row mb-4">
        <label class="col-sm-4 col-form-label fw-semibold">Password</label>
        <div class="col-sm-8">
            <input type="password"
                   ng-model="vm.objLogin.password"
                   class="form-control form-control-lg"
                   placeholder="Enter password">
        </div>
    </div>

    <!-- Buttons -->
    <div class="row mb-3">
        <div class="col-sm-12">
            <button type="button"
                    class="btn btn-primary btn-lg w-100"
                    ng-click="vm.login()">
                Login
            </button>
        </div>
    </div>

    <div class="text-center">
        <a href="/Client/Register" class="text-decoration-none fw-semibold">
            Create Account
        </a>
        <span class="mx-2">|</span>
        <a href="/Client/Index" class="text-decoration-none fw-semibold">
            Continue as Guest
        </a>
    </div>

</div>
