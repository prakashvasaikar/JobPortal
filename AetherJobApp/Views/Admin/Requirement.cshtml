
<script src="~/angularjs/factory/jobrequirementfactory.js"></script>
<script src="~/angularjs/controller/jobrequirementcontroller.js"></script>
<script src="~/angularjs/factory/vacancymasterfactory.js"></script>
<script src="~/angularjs/controller/vacancyController.js"></script>
<div class="container" ng-controller="JobRequirement as vm" ng-init="vm.loadJobRequirement()">
    <div class="row col-md-12 align-items-center mb-3">
        <div class="col">
            <h3 class="mb-0">Job Requirement List</h3>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" ng-click="vm.openAddModal()">
                <i class="fa fa-plus"></i> Add New Job
            </button>
        </div>
    </div>
    <div class="row col-md-12">
        <table id="tblJobRequirement" class="table table-striped table-hover table-bordered align-middle shadow-sm rounded-3">
            <thead class="table-dark">
                <tr>
                    <th>Actions</th>
                    <th>JobRequirement Type</th>
                    <th>Status</th>
                    <th>Job Mode</th>
                    <th>Posted On</th>
                    <th>Expired On</th>
                    <th>IsActive</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="e in vm.objjobRequirementList">
                    <td>
                        <!-- Edit icon -->
                        <i class="fa fa-pencil text-dark me-2"
                           style="cursor:pointer"
                           ng-click="vm.openEditModal(e.id)">
                        </i>

                        <!-- Delete icon -->
                        <i class="fa fa-trash text-danger"
                           style="cursor:pointer"
                           ng-click="vm.deleteJobRequirement(e.id)">
                        </i>
                    </td>

                    <td>{{e.vacancyType}}</td>
                    <td>
                        <span class="badge"
                              ng-class="{'bg-primary': e.status === 'Open', 'bg-danger': e.status === 'Closed'}"
                              style="cursor:pointer">
                            {{ e.status === 'Open' ? 'Open' : 'Closed' }}
                        </span>
                    </td>
                    <td>{{e.jobMode}}</td>
                    <td>{{e.postedOn | date:'yyyy-MM-dd' }}</td>
                    <td>{{e.expiredOn | date:'yyyy-MM-dd' }}</td>
                    <td class="d-flex align-items-center gap-2">
                        <label class="switch">
                            <input type="checkbox"
                                   ng-checked="e.isActive"
                                   ng-click="vm.changeStatus(e.id, e.isActive)">
                            <span class="slider"></span>
                        </label>
                        @* <span>{{ e.isActive ? 'Active' : 'Inactive' }}</span> *@
                    </td>

                </tr>
                <tr ng-if="vm.objjobRequirementList.length === 0">
                    <td colspan="6" style="text-align:center; color:red;">
                        No Records Found
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="modal fade" id="JobRequirementModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content rounded-3 shadow">

                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title">{{vm.isEdit ? 'Edit JobRequirement' : 'Add JobRequirement'}}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label>Vacancy Type</label>
                            <select class="form-control"
                                    ng-model="vm.objjobRequirement.refId_VacancyMaster"
                                    ng-options="v.id as v.vacancyType for v in vm.objVacancyList">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label>Posted On</label>
                            <input type="date" class="form-control" ng-model="vm.objjobRequirement.postedOn">
                        </div>

                        <div class="mb-3">
                            <label>Expired On</label>
                            <input type="date" class="form-control" ng-model="vm.objjobRequirement.expiredOn">
                        </div>
                        <div class="mb-3">
                            <div class="mb-3">
                                <label>Job Mode</label>
                                <select class="form-select" ng-model="vm.objjobRequirement.jobMode">
                                    <option value="Full-Time">Full-Time</option>
                                    <option value="Part-Time">Part-Time</option>
                                    <option value="Contract">Contract</option>
                                    <option value="Internship">Internship</option>
                                    <option value="Remote">Remote</option>
                                    <option value="Hybrid">Hybrid</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label>Job Description</label>
                            <textarea type="text" class="form-control" maxlength="1000" ng-model="vm.objjobRequirement.jobDescription"></textarea>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary" ng-click="vm.saveJobRequirement()">Save</button>
                </div>

            </div>
        </div>
    </div>

</div>